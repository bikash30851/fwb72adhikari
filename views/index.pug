extends layout

block content
  h1= title
  p Welcome to #{title}
  p Making a change in the paragraph
  button(type="button",onclick='update()' class="btn btn-danger")= 'Press Me'

  div(id="target") text of Display

  script.
    var client_count = 0;
    function update(){
      client_count ++;
      document.getElementById("target").innerHTML = "Value now " + client_count;
    }